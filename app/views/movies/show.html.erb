<h1>Movie</h1>
<p>
<h2><%= image_for(@movie) %></h2>
  <article>
    <header>
      <h2><%= @movie.title %></h2>
    </header>
    <p>
      <%= @movie.description %>
    </p>
    <h3>Cast</h3>
    <p>
    <%= @movie.cast %>
    </p>

    <h3>Director</h3>
<p>
  <%= @movie.director %>
</p>

<h3>Duration</h3>
<p>
  <%= @movie.duration %>
</p>
 <table>
      <tr>
        <th>Released:</th>
        <td><%= @movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(@movie) %></td>
      </tr>
    </table>
  </article>
  <p>
  <%= link_to "Edit", edit_movie_path(@movie) %> |
  <%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>